{
  "title": "QR Code API Actor Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "qrCodes": {
      "title": "QR Codes to Generate",
      "type": "array",
      "description": "Array of QR code configurations to generate (supports bulk generation)",
      "editor": "json",
      "prefill": [
        {
          "type": "url",
          "content": "https://apify.com",
          "customization": {
            "size": 300,
            "errorCorrectionLevel": "M"
          }
        }
      ],
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["url", "text", "email", "phone", "sms", "wifi", "vcard", "social"],
            "default": "url"
          },
          "content": {
            "type": "string"
          },
          "id": {
            "type": "string",
            "description": "Optional unique identifier for tracking"
          }
        },
        "required": ["type", "content"]
      }
    },
    "outputFormat": {
      "title": "Output Format",
      "type": "string",
      "description": "Format for generated QR codes",
      "enum": ["png", "svg", "pdf", "all"],
      "default": "png",
      "editor": "select"
    },
    "customization": {
      "title": "Global Customization Settings",
      "type": "object",
      "description": "Default customization applied to all QR codes (can be overridden per QR code)",
      "editor": "json",
      "properties": {
        "size": {
          "type": "integer",
          "description": "Size of QR code in pixels (for PNG/SVG)",
          "default": 300,
          "minimum": 100,
          "maximum": 2000
        },
        "margin": {
          "type": "integer",
          "description": "White space margin around QR code",
          "default": 4,
          "minimum": 0,
          "maximum": 10
        },
        "errorCorrectionLevel": {
          "type": "string",
          "description": "Error correction level (higher = more data redundancy)",
          "enum": ["L", "M", "Q", "H"],
          "default": "M"
        },
        "foregroundColor": {
          "type": "string",
          "description": "Foreground color (hex format)",
          "default": "#000000",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        },
        "backgroundColor": {
          "type": "string",
          "description": "Background color (hex format)",
          "default": "#FFFFFF",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        },
        "logoUrl": {
          "type": "string",
          "description": "URL to logo image to embed in QR code center",
          "editor": "textfield"
        },
        "logoSize": {
          "type": "integer",
          "description": "Logo size as percentage of QR code size",
          "default": 20,
          "minimum": 10,
          "maximum": 40
        }
      }
    },
    "enableAnalytics": {
      "title": "Enable Analytics Tracking",
      "type": "boolean",
      "description": "Track QR code scans and generate analytics (stores metadata in output)",
      "default": true,
      "editor": "checkbox"
    },
    "filenamePrefix": {
      "title": "Filename Prefix",
      "type": "string",
      "description": "Prefix for generated QR code filenames",
      "default": "qr-code",
      "editor": "textfield"
    },
    "saveToKeyValueStore": {
      "title": "Save Files to Key-Value Store",
      "type": "boolean",
      "description": "Save generated QR code files to Apify Key-Value Store",
      "default": true,
      "editor": "checkbox"
    },
    "maxConcurrency": {
      "title": "Max Concurrency",
      "type": "integer",
      "description": "Maximum number of QR codes to generate concurrently",
      "default": 10,
      "minimum": 1,
      "maximum": 50
    }
  },
  "required": ["qrCodes"]
}
